<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" style="margin: 1em;" href="/urls">My URLs</a>
        <a class="nav-item nav-link" style="margin: 1em;" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" style="margin: 1em;" href="/register">Register</a>

        <% if (!users[user]) { %>

          <form class="form-inline" method="POST" action="/login">
            <div class="form-group mb-2">
              <input name="username" type="text" class="form-control" style="width: 300px; margin-right: 1em; "
                placeholder="Username">
              <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
          </form>
          <% } else { %>
            <form class="form-inline" method="POST" action="/logout">
              <div class="form-group mb-2">
                <label class="nav-item" style="margin: 1em;" for="username">Loged in as: <%= users[user].email %>
                    </label>
                <button type="submit" name="username" class="btn btn-primary">Sign Out</button>
              </div>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>